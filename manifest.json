{
  "manifest_version": 2,
  "name": "Notefox: Websites notes",
  "author": "Saverio Morelli (Sav22999)",
  "version": "2.1",
  "description": "Take notes on every website, by domain or by web page.",
  "icons": {
    "16": "./img/icon.svg",
    "24": "./img/icon.svg",
    "48": "./img/icon.svg",
    "96": "./img/icon.svg"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "websitesnotes@saveriomorelli.com",
      "strict_min_version": "42.0"
    }
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "16": "./img/icon.svg",
      "24": "./img/icon.svg",
      "48": "./img/icon.svg",
      "96": "./img/icon.svg"
    },
    "theme_icons": [
      {
        "dark": "./img/icon.svg",
        "light": "./img/icon.svg",
        "size": 16
      },
      {
        "dark": "./img/icon.svg",
        "light": "./img/icon.svg",
        "size": 24
      },
      {
        "dark": "./img/icon.svg",
        "light": "./img/icon.svg",
        "size": 48
      },
      {
        "dark": "./img/icon.svg",
        "light": "./img/icon.svg",
        "size": 96
      }
    ],
    "default_title": "Notefox: Websites notes",
    "default_popup": "./popup.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "unlimitedStorage"
  ],
  "background": {
    "scripts": [
      "./js/background.js"
    ],
    "persistent": true
  },
  "options_ui": {
    "page": "./settings/index.html"
  }
}